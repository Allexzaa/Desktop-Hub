{
  "name": "desktop-hub",
  "version": "1.0.0",
  "description": "A Windows desktop hub application with tabbed functionality",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-react\" \"wait-on http://localhost:3010 && electron .\"",
    "start-react": "craco start",
    "build": "craco build",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "author": "Desktop Hub",
  "license": "MIT",
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "concurrently": "^7.6.0",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "homepage": "./",
  "build": {
    "appId": "com.desktophub.app",
    "productName": "Desktop Hub",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
